<UserControl x:Class="MyMVVM.Setting.View.ThemeSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMVVM.Setting.View"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             >

    <Border Background="LightBlue">

        <Grid Width="500" Height="200">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <RadioButton
                    Width="100"
                    Height="130"
                    Background="#ffffff"
                    BorderBrush="pink"
                    BorderThickness="4"
                    Command="{Binding RadioButton_Click_1}"
                    GroupName="Demo1"
                    IsChecked="{Binding RadioButton1}"
                    Style="{StaticResource RadioButtonSameAsButtonDefault}">
                    <RadioButton.Effect>
                        <DropShadowEffect
                            Direction="315"
                            Opacity="0.8"
                            ShadowDepth="5"
                            Color="pink" />
                    </RadioButton.Effect>
                    <RadioButton.Content>
                        <Border>
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="/Common/Fonts/#iconfont"
                                    FontSize="56"
                                    Foreground="pink"
                                    Text="&#xe695;" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,10,0,0"
                                    FontSize="18"
                                    Foreground="pink"
                                    TextAlignment="Center">
                                    柔情密语
                                </TextBlock>

                            </Grid>
                        </Border>
                    </RadioButton.Content>
                </RadioButton>

            </Grid>


            <Grid Grid.Column="1">

                <RadioButton
                    Width="100"
                    Height="130"
                    Background="#ffffff"
                    BorderBrush=" #87CEFA"
                    BorderThickness="4"
                    Command="{Binding RadioButton_Click_2}"
                    GroupName="Demo1"
                    IsChecked="{Binding RadioButton2}"
                    Style="{StaticResource RadioButtonSameAsButtonDefault}">
                    <RadioButton.Effect>
                        <DropShadowEffect
                            Direction="315"
                            Opacity="0.8"
                            ShadowDepth="5"
                            Color=" #87CEFA" />
                    </RadioButton.Effect>
                    <RadioButton.Content>
                        <Border>
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="/Common/Fonts/#iconfont"
                                    FontSize="56"
                                    Foreground="#87CEFA"
                                    Text="&#xe6dc;" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,10,0,0"
                                    FontSize="18"
                                    Foreground="#87CEFA"
                                    TextAlignment="Center">
                                    晨曦蓝影
                                </TextBlock>

                            </Grid>
                        </Border>
                    </RadioButton.Content>
                </RadioButton>

            </Grid>


            <Grid Grid.Column="2">

                <RadioButton
                    Width="100"
                    Height="130"
                    Background="#ffffff"
                    BorderBrush="#FFD700"
                    BorderThickness="4"
                    Command="{Binding RadioButton_Click_3}"
                    GroupName="Demo1"
                    IsChecked="{Binding RadioButton3}"
                    Style="{StaticResource RadioButtonSameAsButtonDefault}">
                    <RadioButton.Effect>
                        <DropShadowEffect
                            Direction="315"
                            Opacity="0.8"
                            ShadowDepth="5"
                            Color=" #FFD700" />
                    </RadioButton.Effect>
                    <RadioButton.Content>
                        <Border>
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="/Common/Fonts/#iconfont"
                                    FontSize="56"
                                    Foreground="#FFD700"
                                    Text="&#xe63b;" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,10,0,0"
                                    FontSize="18"
                                    Foreground="#FFD700"
                                    TextAlignment="Center">
                                    流金岁月
                                </TextBlock>

                            </Grid>
                        </Border>
                    </RadioButton.Content>
                </RadioButton>

            </Grid>


        </Grid>




    </Border>
</UserControl>
