<UserControl x:Class="MyMVVM.WIFI.View.WIFISettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMVVM.WIFI.View"
             mc:Ignorable="d" 
             Width="640"
             Height="450"
             Background="Transparent"
             >

    <Border Style="{DynamicResource UserCdrMain}" CornerRadius="0" BorderThickness="0">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="300" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock
                    Margin="20,10,0,0"
                    FontFamily="楷体"
                    FontSize="24"
                    Style="{DynamicResource ButtonBlockStyle}"
                    Text="编辑基站"
                    />
            </Grid>

            <WrapPanel Grid.Row="1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1" Height="50" Cursor="">
                        <TextBox
                             Text="{Binding SearchText}" 
                             FontSize="18"
                             Foreground="#000000"
                             Background="SkyBlue"
                             BorderBrush="#2196f3"
                             Width="160"
                             Height="35"
                        />
                    </Grid>

                    <Grid Grid.Column="2" Height="50">
                        <Button 
                            Width="60" 
                            Height="35" 
                            Command="{Binding SearchCommand}" Cursor="Hand"
                            BorderThickness="0"
                            
                            >
                            搜索
                        </Button>
                    </Grid>

                </Grid>

            </WrapPanel>

            <Border Grid.Row="2" Padding="20 0 20 0">
                <Grid>
                    <DataGrid
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        CanUserResizeColumns="False"
                        CanUserSortColumns="False"
                        ColumnHeaderStyle="{DynamicResource CenteredHeaderStyle}"
                        GridLinesVisibility="Horizontal"
                        IsReadOnly="True"
                        ItemsSource="{Binding WIFIDateList}"
                        RowHeight="36"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        SelectionUnit="FullRow">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent" />
                            </Style>

                        </DataGrid.RowStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="16" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>

                            <DataGridTemplateColumn Width="1*" Header="名称">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Style="{DynamicResource UserCdrText}"
                                            Text="{Binding WIFIName}"
                                            IsEnabled="True"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="1.5*" Header="IP地址">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding WIFIIP}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="1.5*" Header="MAC地址">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Style="{DynamicResource UserCdrText}"
                                            Text="{Binding WIFIMAC}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="1.8*" Header="操作">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" FontSize="16" Style="{DynamicResource EditorButton}" Command="{Binding SaveEditorCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Content="编辑"/>
                                            <Button Grid.Column="2" FontSize="16" Style="{DynamicResource EditorButton}" Command="{Binding DeleteCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Content="删除"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Border>

            <Grid Grid.Row="3">
                <WrapPanel Margin="25,0,0,0">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="共" />
                    <TextBlock
                        Width="25"
                        TextAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding TotalPages}" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="当前第" />
                    <TextBlock
                        Width="25"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding CurrentPage}" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">
                    <Button
                        Command="{Binding GoToFirstPageCommand}"
                        Content="回到首页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Margin="15,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        Content="上页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Margin="0,0,50,0"
                        Command="{Binding NextPageCommand}"
                        Content="下页"
                        Style="{DynamicResource Page}" />
                </WrapPanel>
            </Grid>

        </Grid>

    </Border>

</UserControl>

