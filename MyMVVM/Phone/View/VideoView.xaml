<UserControl x:Class="MyMVVM.Phone.View.VideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMVVM.Phone.View"
             mc:Ignorable="d" 
             d:DesignHeight="270"
             d:DesignWidth="350"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             >
    <Border
        BorderThickness="0"
        CornerRadius="10"
        Opacity="0.95">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="8.5*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Margin="0,3,6,0">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Style="{DynamicResource DM-Right-List-VideoCall-Icon}"
                            Kind="VideoBox" />
                    </TextBlock>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Black"
                        Style="{DynamicResource DM-Right-List-VideoCall-Text}"
                        Text="视频通话" />
                </WrapPanel>
            </Border>
            <Border Grid.Row="1" Style="{DynamicResource CustomBorderStyle2}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.3*" />
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <!--<ColumnDefinition Width="5*" />k-->
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <UniformGrid
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Columns="3"
                                Rows="4">
                                <!--  Number buttons  -->
                                <Button
                                    Click="Button_Click"
                                    Content="1"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="2"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="3"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="4"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="5"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="6"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="7"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="8"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="9"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="*"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="0"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />
                                <Button
                                    Click="Button_Click"
                                    Content="#"
                                    Style="{DynamicResource ExpansionButtonStyle2}" />


                            </UniformGrid>
                        </Grid>

                    </Grid>

                    <Grid Grid.Row="0">
                        <TextBox
                            Width="170"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            FontSize="20"
                            Text="{Binding Phone}"
                            TextAlignment="Center" />
                        <Button
                            Margin="0,0,7,0"
                            HorizontalAlignment="Right"
                            Click="Backspace_Click"
                            Content="⌫"
                            Style="{DynamicResource ExpansionButtonStyle2}" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Button
                                Width="80"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding CalloutBut}"
                                FontSize="15"
                                Style="{DynamicResource AudioCall}">
                                <Image Source="/Common/Images/audio.png" />
                            </Button>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Button
                                Width="80"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding VideoBut}"
                                FontSize="20"
                                Style="{DynamicResource VideoCall}">
                                <Image Source="/Common/Images/video.png" />
                            </Button>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Button
                                Width="80"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding HangUpBut}"
                                FontSize="20"
                                Style="{DynamicResource HangUp}">
                                <Image Source="/Common/Images/hangup.png" />
                            </Button>
                        </Grid>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>

