<UserControl x:Class="MyMVVM.Phone.View.PhoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMVVM.Phone.View"
             mc:Ignorable="d" 
             Width="1480"
             Height="760"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             >

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.00*" />
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="1.00*" />
            <ColumnDefinition Width="0.03*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="1.4*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ItemsControl ItemsSource="{Binding UserDataList}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8" Rows="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Background="{Binding BackgroundColor}"
                                Command="{Binding ButtonCommand}"
                                Style="{DynamicResource MainButton}"
                                Tag="{Binding Usernum}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <WrapPanel>
                                            <TextBlock>
                                                <materialDesign:PackIcon Foreground="Black" Kind="CellphoneBasic" />
                                            </TextBlock>
                                            <TextBlock Foreground="{Binding UserButtonFontColor}" Text="{Binding Username}" />
                                        </WrapPanel>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <TextBlock
                                            Margin="3,3,0,0"
                                            HorizontalAlignment="Center"
                                            Foreground="{Binding UserButtonFontColor}"
                                            Text="{Binding UserDisplay}" />
                                    </Grid>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Grid>

            <Grid Grid.Row="1" Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />

                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.28*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Command="{Binding PreviousPageCommand}"
                    Content="上页"
                    Style="{DynamicResource Page}" />

                <Button
                    Grid.Column="2"
                    Command="{Binding NextPageCommand}"
                    Content="下页"
                    Style="{DynamicResource Page}" />
            </Grid>

            <Grid Grid.Row="2">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding GroupDataList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding GroupButtonColor}"
                                    Command="{Binding GroupButtonCommand}"
                                    Style="{DynamicResource GroupButtonStyle}">
                                    <WrapPanel>
                                        <TextBlock Margin="0,0,6,0">
                                            <materialDesign:PackIcon Foreground="White" Kind="UserGroup" />
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding GroupName}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="1100*" />
                    <ColumnDefinition Width="105*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding LeftDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

                <Grid Grid.Column="1">

                    <ItemsControl ItemsSource="{Binding DispatchButtonModelList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding BackgroundColor}"
                                    Command="{Binding ButtonCommand}"
                                    Opacity="{Binding IsShow}"
                                    Style="{DynamicResource DispatchButton}">
                                    <WrapPanel>
                                        <TextBlock Padding="0,0,5,3">
                                            <materialDesign:PackIcon
                                                Margin="0,4,0,0"
                                                Foreground="White"
                                                Kind="{Binding Icon}" />
                                        </TextBlock>
                                        <TextBlock
                                            Padding="0,1,5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Name}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                </Grid>

                <Grid Grid.Column="2">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding RightDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>
            </Grid>

        </Grid>

        <Grid Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="3.33*" />
                    <RowDefinition Height="0.02*" />
                    <RowDefinition Height="2.6*" />
                    <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>

            <!-- 无声介入 -->
            <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Margin="0,3,6,0">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Style="{DynamicResource DM-Right-List-CallList-Icon}"
                                Kind="AccountSwitch" />
                    </TextBlock>
                    <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-CallList-Text}"
                            Text="无声介入" />

                    <Button
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5 1 5 1"
                        Margin="5 0 0 0"
                        Command="{Binding PhoneSWITCHFRONTCommand}"
                        Visibility="{Binding IsShowButtonOfRemoteContro, Converter={StaticResource BooleanToVisibilityConverter}}"
                    >
                        <Button.Content>
                            <Image Source="/Phone/Images/switch_camera.png" />
                        </Button.Content>
                    </Button>

                    <Button
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10 1 0 1"
                        Command="{Binding PhoneMUTECommand}"
                        Visibility="{Binding IsShowButtonOfRemoteContro, Converter={StaticResource BooleanToVisibilityConverter}}"
                    >
                        <Button.Content>
                            <Image Source="/Phone/Images/speaker.png" />
                        </Button.Content>
                    </Button>

                    <Button
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6 0 5 0"
                        Command="{Binding PhoneRemoteControFullScreen}"
                        Visibility="{Binding IsShowButtonOfRemoteContro, Converter={StaticResource BooleanToVisibilityConverter}}"
                    >
                        <Button.Content>
                            <Image Source="/Phone/Images/openFullScreenRemoteContro.png" />
                        </Button.Content>
                    </Button>

                    <Button
                            Height="20"
                            Background="Transparent"
                            BorderThickness="0"
                        Padding="8 1 5 1"
                            Command="{Binding CloseSmallScreenRemoteContro}"
                            Visibility="{Binding IsShowButtonOfRemoteContro, Converter={StaticResource BooleanToVisibilityConverter}}"
                        >
                        <Button.Content>
                            <Image Source="/Phone/Images/close_small.png" />
                        </Button.Content>
                    </Button>

                </WrapPanel>
            </Border>
            <Border Grid.Row="1" Style="{DynamicResource CustomBorderStyle2}" Padding="0" >
                <Border Background="Transparent"
                        Visibility="{Binding IsShowButtonOfRemoteContro, Converter={StaticResource BooleanToVisibilityConverter}}"
                        >
                    <vlc:VideoView x:Name="PhoneVideoPlayer" Background="Transparent"/>
                </Border>
            </Border>

            <!-- 视频通话 -->
            <Border Grid.Row="3">
                <ContentControl x:Name="VideoModule" />
            </Border>

        </Grid>

    </Grid>
    
</UserControl>

