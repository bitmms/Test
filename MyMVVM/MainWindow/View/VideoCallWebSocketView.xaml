<Window x:Class="MyMVVM.MainWindow.View.VideoCallWebSocketView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:local="clr-namespace:MyMVVM.Monitor.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OneMonitorView"
    Width="1440"
    Height="800"
    Icon="/Common/Images/logo.ico"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Border Style="{DynamicResource UserCdrMain}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                CornerRadius="0"
                Style="{DynamicResource UserCdrMainHeader}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="500" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                       Name="VideoCallNumber"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        TextAlignment="Center"
                        TextBlock.FontWeight="Bold"
                        Text="123154" />
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="97*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" Padding="10">
                    <WindowsFormsHost Style="{DynamicResource CustomBorderStyle3}">
                        <forms:PictureBox x:Name="OneMonitorVideoForm" />
                    </WindowsFormsHost>
                </Border>
            </Grid>

        </Grid>

    </Border>
    
</Window>
