<Window x:Class="MyMVVM.MainWindow.View.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMVVM.MainWindow.View"
        mc:Ignorable="d"
        Title="PasswordWindow" 
        Width="260"
        Height="200"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Common/Images/logo.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        >

    <Border Style="{DynamicResource BroadcastFromStyle}">

        <Grid>
            <StackPanel>
                <Label
                    Height="40"
                    Margin="25,20,0,30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="请输入密码！"
                    FontSize="25" />
                <PasswordBox
                    x:Name="passwordBox"
                    Width="220"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="#FFFFFF"
                    BorderBrush="Transparent" />
                <WrapPanel>
                    <Button
                        Width="60"
                        Height="35"
                        Margin="65,30,30,0"
                        Background="#D3D3D3"
                        BorderBrush="Transparent"
                        Click="Confirm_Click"
                        Content="确定"
                        FontSize="12"
                        Foreground="Black" />

                    <Button
                        Width="60"
                        Height="35"
                        Margin="0,30,0,0"
                        Background="#D3D3D3"
                        BorderBrush="Transparent"
                        Click="Cancel_Click"
                        Content="取消"
                        FontSize="12"
                        Foreground="Black" />
                </WrapPanel>

            </StackPanel>
        </Grid>
    </Border>

</Window>
