<Window x:Class="MyMVVM.MainWindow.View.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMVVM.MainWindow.View"
        mc:Ignorable="d"
        Title="InputDialog"
        Width="320"
        Height="200"
        Icon="/Common/Images/logo.ico"
        WindowStartupLocation="CenterScreen"
        >

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Offset="0.0" Color="#F8F8FF" />
                <GradientStop Offset="1" Color="#3aa0ff" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <StackPanel>
                <TextBlock
                    Margin="10"
                    FontSize="18"
                    FontWeight="Black"
                    Text="{Binding Prompt}" />
                <TextBox
                    x:Name="InputTextBox"
                    Margin="10"
                    FontSize="15"
                    Text="{Binding ResponseText}" />
                <Button
                    Width="75"
                    Height="35"
                    Margin="0,20,15,0"
                    HorizontalAlignment="Right"
                    Background="#4682B4"
                    BorderThickness="0"
                    Click="OkButton_Click"
                    Content="确定" />
            </StackPanel>
        </Grid>
    </Border>

</Window>
