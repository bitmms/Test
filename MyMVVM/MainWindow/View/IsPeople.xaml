<Window x:Class="MyMVVM.MainWindow.View.IsPeople"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMVVM.MainWindow.View"
        mc:Ignorable="d"
        Title="IsPeople" 
        Width="370"
        Height="170"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
       >

    <Border >
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Offset="0.0" Color="#F8F8FF" />
                <GradientStop Offset="1" Color="#3aa0ff" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <StackPanel Margin="10,12,0,0">
                <WrapPanel>
                    <TextBlock
                        Margin="0,20,0,0"
                        FontSize="20"
                        FontWeight="Black"
                        Text="请填写无人值守号码" />
                    <TextBox
                        x:Name="peopleNum"
                        Width="150"
                        Height="20"
                        Margin="10,20,0,0"
                        Padding="0,0,15,0"
                        FontSize="18" />
                </WrapPanel>
                <WrapPanel Margin="30,45,0,0">
                    <Button
                        Width="80"
                        Height="30"
                        Margin="50,0,0,0"
                        Background="#87CEFF"
                        BorderThickness="0"
                        Click="Button_Click"
                        Content="取消"
                        FontSize="16"
                        Foreground="Black" />
                    <Button
                        Width="80"
                        Height="30"
                        Margin="80,0,0,0"
                        Background="#87CEFF"
                        BorderThickness="0"
                        Click="Button_Click_1"
                        Content="确认"
                        FontSize="16"
                        Foreground="Black" />
                </WrapPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>

