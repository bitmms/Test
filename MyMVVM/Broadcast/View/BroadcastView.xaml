<UserControl
    x:Class="MyMVVM.Broadcast.View.BroadcastView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:local="clr-namespace:MyMVVM.Broadcast.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renderOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Width="1480"
    Height="760"
    mc:Ignorable="d">


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.00*" />
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="1.00*" />
            <ColumnDefinition Width="0.03*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="1.4*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ItemsControl ItemsSource="{Binding UserDataList}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8" Rows="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Background="{Binding BackgroundColor}"
                                Command="{Binding ButtonCommand}"
                                Style="{DynamicResource MainButton}"
                                Tag="{Binding Usernum}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.5*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <TextBlock
                                            Margin="0,0,12,0"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap">
                                            <materialDesign:PackIcon
                                                Foreground="#16c415"
                                                Kind="VideoMinus"
                                                Visibility="{Binding IsShowCamera, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <materialDesign:PackIcon
                                                Foreground="#363636"
                                                Kind="VideoMinus"
                                                Visibility="{Binding IsNotShowCamera, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <!--<InlineUIContainer>
                                                <materialDesign:PackIcon Foreground="#363636" Kind="Bullhorn" />
                                            </InlineUIContainer>-->
                                            <Run Foreground="{Binding UserButtonFontColor}" Text="{Binding Username}" />
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <TextBlock
                                            Margin="3,3,3,0"
                                            HorizontalAlignment="Center"
                                            Foreground="{Binding UserButtonFontColor}"
                                            Text="{Binding UserDisplay}" />
                                    </Grid>

                                </Grid>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.28*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Command="{Binding PreviousPageCommand}"
                    Content="上页"
                    Style="{DynamicResource Page}"
                    Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Grid.Column="2"
                    Command="{Binding NextPageCommand}"
                    Content="下页"
                    Style="{DynamicResource Page}"
                    Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

            </Grid>

            <Grid Grid.Row="2">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding GroupDataList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding GroupButtonColor}"
                                    Command="{Binding GroupButtonCommand}"
                                    Style="{DynamicResource GroupButtonStyle}">
                                    <WrapPanel>
                                        <TextBlock Margin="0,0,6,0">
                                            <materialDesign:PackIcon Foreground="White" Kind="UserGroup" />
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding GroupName}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="1100*" />
                    <ColumnDefinition Width="105*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding LeftDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

                <Grid Grid.Column="1">

                    <ItemsControl ItemsSource="{Binding DispatchButtonModelList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding BackgroundColor}"
                                    Command="{Binding ButtonCommand}"
                                    Opacity="{Binding IsShow}"
                                    Style="{DynamicResource DispatchButton}">
                                    <WrapPanel>
                                        <TextBlock Padding="0,0,5,3">
                                            <materialDesign:PackIcon
                                                Margin="0,4,0,0"
                                                Foreground="White"
                                                Kind="{Binding Icon}" />
                                        </TextBlock>
                                        <TextBlock
                                            Padding="0,1,5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Name}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                </Grid>


                <Grid Grid.Column="2">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding RightDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

            </Grid>

        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="4.8*" />
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="5.5*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="18*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                    <WrapPanel>
                        <TextBlock>
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="95,2,5,0"
                                Kind="MonitorSpeaker"
                                Style="{DynamicResource DM-Right-List-Monitor-Icon}" />
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-Monitor-Text}"
                            Text="监控视频" />
                        <Button
                            Height="25"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Button_All_Camera_Video">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="20"
                                Kind="AlphabetTBoxOutline"
                                Style="{DynamicResource DM-Right-List-Camera-Icon}" />
                        </Button>

                    </WrapPanel>
                </Border>
                <Border
                    Grid.Row="1"
                    Padding="0"
                    Style="{DynamicResource CustomBorderStyle2}">
                    <WindowsFormsHost Style="{DynamicResource CustomBorderStyle3}">
                        <forms:PictureBox x:Name="BroadcastCameraVideo" />
                    </WindowsFormsHost>
                </Border>

            </Grid>


            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="40*" />
                    <RowDefinition Height="18.4*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                    <WrapPanel>
                        <TextBlock>
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="95,2,5,0"
                                Kind="BookmarkMusicOutline"
                                Style="{DynamicResource DM-Right-List-Music-Icon}" />
                        </TextBlock>

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-Music-Text}"
                            Text="音乐广场" />
                        <TextBlock
                            Padding="40,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-Music-Text}"
                            Text="{Binding MusicUploadIngText}" />
                    </WrapPanel>
                </Border>

                <Border
                    Grid.Row="1"
                    CornerRadius="0 0 0 0"
                    Style="{DynamicResource CustomBorderStyle2}">
                    <!--  音乐播放没有使用 MVVM 模式，但是 SelectedMusicItem 不可删除，因为选择音乐播放广播需要使用  -->
                    <DataGrid
                        x:Name="MusicDataGrid"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        IsReadOnly="True"
                        ItemsSource="{Binding MusicList}"
                        SelectedItem="{Binding SelectedMusicItem}"
                        SelectionChanged="MusicDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="2.5*"
                                Binding="{Binding Name}"
                                Header="歌曲名称" />
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Time}"
                                Header="时长" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <Border
                    Grid.Row="2"
                    Style="{DynamicResource CustomBorderStyle2}"
                    Visibility="{Binding IsMusicSynching, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="/Common/Fonts/#iconfont"
                            FontSize="20"
                            Foreground="#11cd6e"
                            Text="&#xe62f;" />

                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="歌曲同步中，请稍等" />

                    </Grid>
                </Border>

                <Border
                    Grid.Row="2"
                    Style="{DynamicResource CustomBorderStyle2}"
                    Visibility="{Binding IsMusicSyncSuccess, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="0.01*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="MusicNameElement"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="当前未选择音乐" />

                            <MediaElement
                                x:Name="mediaElement"
                                Grid.Column="1"
                                LoadedBehavior="Manual"
                                MediaEnded="mediaElement_MediaEnded"
                                MediaOpened="mediaElement_MediaOpened" />

                            <Button
                                Grid.Column="2"
                                Click="ClickPreMusicButton"
                                Style="{DynamicResource MusicControlButtonStyle}">
                                <Button.Content>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="/Common/Fonts/#iconfont"
                                        FontSize="16"
                                        Text="&#xe61f;" />
                                </Button.Content>
                            </Button>

                            <Button
                                x:Name="PlayButton"
                                Grid.Column="3"
                                Click="PlayMusic"
                                Style="{DynamicResource MusicControlButtonStyle}">
                                <Button.Content>
                                    <TextBlock
                                        x:Name="PlayButtonTextBloc"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="/Common/Fonts/#iconfont"
                                        FontSize="16"
                                        Text="&#xe66e;" />
                                </Button.Content>

                            </Button>

                            <Button
                                Grid.Column="4"
                                Click="ClickNextMusicButton"
                                Style="{DynamicResource MusicControlButtonStyle}">
                                <Button.Content>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="/Common/Fonts/#iconfont"
                                        FontSize="16"
                                        Text="&#xe634;" />
                                </Button.Content>
                            </Button>

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="2.5*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="MusicRunTimeElement"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="00:00" />

                            <Slider
                                x:Name="sliderPosition"
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                IsMoveToPointEnabled="True"
                                ValueChanged="sliderPosition_ValueChanged" />

                            <TextBlock
                                x:Name="MusicTimeElement"
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="00:00" />

                        </Grid>

                    </Grid>

                </Border>

            </Grid>

        </Grid>

    </Grid>

</UserControl>
