<Window x:Class="MyMVVM.Broadcast.View.TTSListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMVVM.Broadcast.View"
        mc:Ignorable="d"
        Title="TTSListView"
        Width="800"
        Height="580"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Common/Images/logo.ico"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >



    <Border Style="{DynamicResource UserCdrMain}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{DynamicResource UserCdrMainHeader}">
                <Grid>
                    <TextBlock
                        Margin="20,18,0,0"
                        FontFamily="楷体"
                        FontSize="24"
                        Style="{DynamicResource ButtonBlockStyle}"
                        Text="TTS列表" />
                    <Button
                        x:Name="btnClose"
                        Grid.Column="2"
                        Height="50"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnClose_Click">
                        <materialDesign:PackIcon
                            Width="45"
                            Height="45"
                            Foreground="Black"
                            Kind="CloseCircleOutline" />
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" HorizontalAlignment="Right">
                <Button
                    Width="120"
                    Margin="0,0,20,0"
                    Command="{Binding ClickCreateTTSText}"
                    Content="创建TTS"
                    Style="{DynamicResource EditorButton}" />
            </Grid>

            <Grid Grid.Row="2">

                <DataGrid
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    BorderThickness="0"
                    CanUserResizeColumns="False"
                    CanUserSortColumns="False"
                    ColumnHeaderStyle="{DynamicResource CenteredHeaderStyle}"
                    GridLinesVisibility="Horizontal"
                    IsReadOnly="True"
                    ItemsSource="{Binding TTSList}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Margin" Value="0,10,0,0" />
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FontSize" Value="16" />
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>

                        <DataGridTemplateColumn Width="10*" Header="名称">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="15*" Header="TTS文本">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding Text}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="5*" Header="时长">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding Time}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="10*" Header="操作">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Button
                                            Width="120"
                                            Command="{Binding DeleteTTSCommand}"
                                            Content="删除"
                                            Style="{DynamicResource EditorButton}" />
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>

            <Grid Grid.Row="3">
                <WrapPanel Margin="25,0,0,0">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="共" />
                    <TextBlock
                        Width="25"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding TotalPages}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="当前第" />
                    <TextBlock
                        Width="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding CurrentPage}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">

                    <!--<Button
                        Opacity="{Binding IsHideFirstButton}"
                        Command="{Binding GoToFirstPageCommand}"
                        Content="回到首页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Opacity="{Binding IsHideFirstButton}"
                        Margin="15,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        Content="上页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Opacity="{Binding IsHideNextButton}"
                        Margin="0,0,50,0"
                        Command="{Binding NextPageCommand}"
                        Content="下页"
                        Style="{DynamicResource Page}" />-->

                    <Button
                        Command="{Binding GoToFirstPageCommand}"
                        Content="回到首页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Margin="15,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        Content="上页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Margin="0,0,50,0"
                        Command="{Binding NextPageCommand}"
                        Content="下页"
                        Style="{DynamicResource Page}" />

                </WrapPanel>
            </Grid>

        </Grid>

    </Border>

</Window>