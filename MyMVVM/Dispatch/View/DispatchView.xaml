<UserControl
    x:Class="MyMVVM.Dispatch.View.DispatchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eui="clr-namespace:ElementUI.WPF.Component;assembly=ElementUI.WPF"
    xmlns:local="clr-namespace:MyMVVM.Dispatch.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1480"
    Height="760"
    Unloaded="OnViewUnloaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.00*" />
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="1.00*" />
            <ColumnDefinition Width="0.03*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="1.4*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ItemsControl ItemsSource="{Binding UserDataList}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8" Rows="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Background="{Binding BackgroundColor}"
                                Command="{Binding ButtonCommand}"
                                Style="{DynamicResource MainButton}"
                                Tag="{Binding Usernum}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.5*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <TextBlock
                                            Margin="0,0,12,0"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap">
                                            <InlineUIContainer>
                                                <materialDesign:PackIcon Foreground="#363636" Kind="PhoneClassic" />
                                            </InlineUIContainer>
                                            <Run Foreground="{Binding UserButtonFontColor}" Text="{Binding Username}" />
                                        </TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <TextBlock
                                            Margin="3,3,0,0"
                                            HorizontalAlignment="Center"
                                            Foreground="{Binding UserButtonFontColor}"
                                            Text="{Binding UserDisplay}" />
                                    </Grid>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Grid>

            <Grid Grid.Row="1" Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />

                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.28*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Command="{Binding PreviousPageCommand}"
                    Content="上页"
                    Style="{DynamicResource Page}" />

                <Button
                    Grid.Column="2"
                    Command="{Binding NextPageCommand}"
                    Content="下页"
                    Style="{DynamicResource Page}" />
            </Grid>

            <Grid Grid.Row="2">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding GroupDataList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding GroupButtonColor}"
                                    Command="{Binding GroupButtonCommand}"
                                    Style="{DynamicResource GroupButtonStyle}">
                                    <WrapPanel>
                                        <TextBlock Margin="0,0,6,0">
                                            <materialDesign:PackIcon Foreground="White" Kind="UserGroup" />
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding GroupName}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="1100*" />
                    <ColumnDefinition Width="105*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding LeftDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

                <Grid Grid.Column="1">

                    <ItemsControl ItemsSource="{Binding DispatchButtonModelList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding BackgroundColor}"
                                    Command="{Binding ButtonCommand}"
                                    Opacity="{Binding IsShow}"
                                    Style="{DynamicResource DispatchButton}">
                                    <WrapPanel>
                                        <TextBlock Padding="0,0,5,3">
                                            <materialDesign:PackIcon
                                                Margin="0,4,0,0"
                                                Foreground="White"
                                                Kind="{Binding Icon}" />
                                        </TextBlock>
                                        <TextBlock
                                            Padding="0,1,5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Name}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>


                </Grid>

                <Grid Grid.Column="2">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding RightDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>
            </Grid>

        </Grid>


        <Grid Grid.Column="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.02*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.02*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.02*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">

                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Margin="0,3,6,0">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="AccountSwitch"
                                Style="{DynamicResource DM-Right-List-CallList-Icon}" />
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-CallList-Text}"
                            Text="通话列表" />
                    </WrapPanel>
                </Border>

                <Border Grid.Row="1" Style="{DynamicResource CustomBorderStyle2}">
                    <DataGrid
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        HeadersVisibility="None"
                        IsReadOnly="True"
                        ItemsSource="{Binding CallingUser}">

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <!--<Setter Property="TextBlock.Foreground" Value="#3271ae" />-->
                                <Setter Property="TextBlock.FontSize" Value="16" />
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Binding="{Binding Cid_num}" />
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <materialDesign:PackIcon Foreground="Green" Kind="ArrowRightBold" />
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="*" Binding="{Binding Dest}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" />
                    <RowDefinition Height="0.4*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">

                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock>
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="0,0,0,4"
                                Kind="AccountArrowLeftOutline"
                                Style="{DynamicResource DM-Right-List-CallWait-Icon}" />
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-CallWait-Text}"
                            Text="来电排队" />
                    </WrapPanel>

                </Border>

                <Border Grid.Row="1" Style="{DynamicResource CustomBorderStyle2}">
                    <DataGrid
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        HeadersVisibility="None"
                        IsReadOnly="True"
                        ItemsSource="{Binding WaitList}"
                        SelectedItem="{Binding WaitListItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="auto" Binding="{Binding WaitDisplay}" />
                            <DataGridTextColumn Width="auto" Binding="{Binding WaitDate}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" />
                    <RowDefinition Height="0.8*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                    <WrapPanel>
                        <TextBlock>
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="100,2,0,0"
                                Kind="ClipboardList"
                                Style="{DynamicResource DM-Right-List-DispatchCDR-Icon}" />
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-DispatchCDR-Text}"
                            Text="调度记录" />
                        <Button
                            Height="25"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Button_Click">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="20"
                                Kind="AlphabetTBoxOutline"
                                Style="{DynamicResource DM-Right-List-DispatchDetail-Icon}" />
                        </Button>


                    </WrapPanel>
                </Border>
                <Border Grid.Row="1" Style="{DynamicResource CustomBorderStyle2}">
                    <DataGrid
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        HeadersVisibility="None"
                        IsReadOnly="True"
                        ItemsSource="{Binding DispatchCdr}"
                        SelectedItem="{Binding SelectedItem}">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0,8,0,0" />
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="16" />
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="70" Binding="{Binding Duration}" />
                            <DataGridTextColumn Width="auto" Binding="{Binding CallerNum}" />
                            <DataGridTemplateColumn Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <materialDesign:PackIcon Foreground="Green" Kind="ArrowRightBold" />
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="auto" Binding="{Binding CalleeNum}" />

                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid Grid.Row="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" />
                    <RowDefinition Height="0.8*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                    <eui:Button
                        ButtonBackgroundColor="Transparent"
                        ButtonBorderColor="Transparent"
                        ButtonIconAndTextSpace="2"
                        ButtonIconCode="&#xe60e;"
                        ButtonIsAutoSize="True"
                        ButtonText="网关报警"
                        ButtonTextColor="#2E8B57"
                        ButtonTextSize="18"
                        ButtonTextWeight="Black"
                        IconColor="#2E8B57"
                        IsEnabled="False"
                        MouseEnterButtonBackgroundColor="Transparent"
                        MouseEnterButtonBorderColor="Transparent"
                        MouseEnterButtonTextColor="#2E8B57"
                        MouseEnterIconColor="#2E8B57"
                        NoButtonIconColor="#2E8B57"
                        Style="{StaticResource LeftIconAndRightTextButton}" />
                </Border>
                <Border Grid.Row="1" Style="{DynamicResource CustomBorderStyle2}">
                    <DataGrid
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        HeadersVisibility="None"
                        IsReadOnly="True"
                        ItemsSource="{Binding GatewayAlarmRecord}">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0,8,0,0" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="16" />
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="1*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding telno}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="#f36371"
                                            Text="{Binding desc}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</UserControl>