<UserControl x:Class="MyMVVM.Conference.View.ConferenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMVVM.Conference.View"
             mc:Ignorable="d" 
             Width="1480"
             Height="760"
             xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             >


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.00*" />
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="1.00*" />
            <ColumnDefinition Width="0.03*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="1.4*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ItemsControl ItemsSource="{Binding UserDataList}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8" Rows="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Background="{Binding BackgroundColor}"
                                Command="{Binding ButtonCommand}"
                                Style="{DynamicResource MainButton}"
                                Tag="{Binding Usernum}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.5*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <TextBlock
                                            Margin="0,0,12,0"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap">
                                            <materialDesign:PackIcon Foreground="#363636" Kind="AccountBadge"/>
                                            <Run Foreground="{Binding UserButtonFontColor}" Text="{Binding Username}" />
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <TextBlock
                                            Margin="3,3,3,0"
                                            HorizontalAlignment="Center"
                                            Foreground="{Binding UserButtonFontColor}"
                                            Text="{Binding UserDisplay}" />
                                    </Grid>

                                </Grid>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.28*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Command="{Binding PreviousPageCommand}"
                    Content="上页"
                    Style="{DynamicResource Page}"
                    Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Grid.Column="2"
                    Command="{Binding NextPageCommand}"
                    Content="下页"
                    Style="{DynamicResource Page}"
                    Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

            </Grid>

            <Grid Grid.Row="2">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding GroupDataList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding GroupButtonColor}"
                                    Command="{Binding GroupButtonCommand}"
                                    Style="{DynamicResource GroupButtonStyle}">
                                    <WrapPanel>
                                        <TextBlock Margin="0,0,6,0">
                                            <materialDesign:PackIcon Foreground="White" Kind="UserGroup" />
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding GroupName}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="1100*" />
                    <ColumnDefinition Width="105*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding LeftDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

                <Grid Grid.Column="1">

                    <ItemsControl ItemsSource="{Binding DispatchButtonModelList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding BackgroundColor}"
                                    Command="{Binding ButtonCommand}"
                                    Opacity="{Binding IsShow}"
                                    Style="{DynamicResource DispatchButton}">
                                    <WrapPanel>
                                        <TextBlock Padding="0,0,5,3">
                                            <materialDesign:PackIcon
                                                Margin="0,4,0,0"
                                                Foreground="White"
                                                Kind="{Binding Icon}" />
                                        </TextBlock>
                                        <TextBlock
                                            Padding="0,1,5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Name}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                </Grid>


                <Grid Grid.Column="2">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding RightDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

            </Grid>

        </Grid>

        <Grid Grid.Column="2" Background="Transparent">

        </Grid>

    </Grid>

</UserControl>
