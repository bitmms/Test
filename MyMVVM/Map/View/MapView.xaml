<UserControl x:Class="MyMVVM.Map.View.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMVVM.Map.View"
             mc:Ignorable="d" 
             Width="1480"
             Height="760"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel
                Margin="0,10,0,0"
                VerticalAlignment="top"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="5"
                    Click="BrushButton_Click"
                    Content="画笔"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="80"
                    Margin="5"
                    Click="EraserButton_Click"
                    Content="擦除"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="80"
                    Margin="5"
                    Click="LineButton_Click"
                    Content="直线"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="RectangleButton_Click"
                    Content="绘制矩形"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="EllipseButton_Click"
                    Content="绘制椭圆"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="SaveButton_Click"
                    Content="保存绘制"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="120"
                    Margin="5"
                    Click="LoadButton_Click"
                    Content="加载绘制图片"
                    Style="{DynamicResource DispatchButton}" />
                <Button
                    Width="80"
                    Margin="5"
                    Click="ClearButton_Click"
                    Content="恢复"
                    Style="{DynamicResource DispatchButton}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Canvas
                Name="DrawingCanvas"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                MouseDown="DrawingCanvas_MouseDown"
                MouseMove="DrawingCanvas_MouseMove"
                MouseUp="DrawingCanvas_MouseUp" />
        </Grid>
    </Grid>
</UserControl>

