<Window
    x:Class="MyMVVM.Monitor.View.OneMonitorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:local="clr-namespace:MyMVVM.Monitor.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OneMonitorView"
    Width="1440"
    Height="800"
    Icon="/Common/Images/logo.ico"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Border Style="{DynamicResource UserCdrMain}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                CornerRadius="0"
                Style="{DynamicResource UserCdrMainHeader}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="楷体"
                        FontSize="24"
                        Style="{DynamicResource ButtonBlockStyle}"
                        Text="预览对讲" />
                    <Button
                        x:Name="OpenTalkButton"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="OpenOrCloseTalkCommand">
                        <Button.Content>
                            <Image Source="/Monitor/Images/open_talk.png" />
                        </Button.Content>
                    </Button>
                    <Button
                        x:Name="CloseTalkButton"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="OpenOrCloseTalkCommand">
                        <Button.Content>
                            <Image Source="/Monitor/Images/close_talk.png" />
                        </Button.Content>
                    </Button>
                    <Button
                        Grid.Column="3"
                        Height="50"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CloseWindowCommand">
                        <materialDesign:PackIcon
                            Width="40"
                            Height="40"
                            Foreground="Black"
                            Kind="CloseCircleOutline" />
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="97*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" Padding="10">
                    <WindowsFormsHost Style="{DynamicResource CustomBorderStyle3}">
                        <forms:PictureBox x:Name="OneMonitorVideoForm" />
                    </WindowsFormsHost>
                </Border>
            </Grid>

        </Grid>

    </Border>

</Window>
