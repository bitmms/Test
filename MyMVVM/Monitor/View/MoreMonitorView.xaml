<Window
    x:Class="MyMVVM.Monitor.View.MoreMonitorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:local="clr-namespace:MyMVVM.Monitor.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MoreMonitorView"
    Width="1440"
    Height="800"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="0" Style="{DynamicResource UserCdrMain}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="楷体"
                        FontSize="24"
                        Style="{DynamicResource ButtonBlockStyle}"
                        Text="预览对讲" />
                    <Button
                        Grid.Column="2"
                        Height="50"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CloseWindow">
                        <materialDesign:PackIcon
                            Width="40"
                            Height="40"
                            Foreground="Black"
                            Kind="CloseCircleOutline" />
                    </Button>
                </Grid>
            </Grid>

            <Border Grid.Row="1" Padding="22.5,0,22.5,22.5">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="22.5" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450" />
                            <ColumnDefinition Width="22.5" />
                            <ColumnDefinition Width="450" />
                            <ColumnDefinition Width="22.5" />
                            <ColumnDefinition Width="450" />
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="Box1" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="420"
                                Height="50"
                                Style="{DynamicResource CustomBorderStyle}">
                                <WrapPanel>
                                    <TextBlock
                                        x:Name="MonitorTitleText_01"
                                        MaxWidth="350"
                                        Margin="5,5,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource CameraTitleText}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        x:Name="MonitorTitleText_Icon_01"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Image
                                            Height="25"
                                            Margin="15,5,0,0"
                                            Source="/Monitor/Images/speaker.png" />
                                    </Border>
                                </WrapPanel>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Width="420"
                                Height="250"
                                Padding="0"
                                Style="{DynamicResource CustomBorderStyle2}">
                                <WindowsFormsHost>
                                    <forms:PictureBox x:Name="MonitorVideoForm_01" />
                                </WindowsFormsHost>
                            </Border>
                        </Grid>

                        <Grid x:Name="Box2" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="420"
                                Height="50"
                                Style="{DynamicResource CustomBorderStyle}">
                                <WrapPanel>
                                    <TextBlock
                                        x:Name="MonitorTitleText_02"
                                        MaxWidth="350"
                                        Margin="5,5,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource CameraTitleText}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        x:Name="MonitorTitleText_Icon_02"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Image
                                            Height="25"
                                            Margin="15,5,0,0"
                                            Source="/Monitor/Images/speaker.png" />
                                    </Border>
                                </WrapPanel>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Width="420"
                                Height="250"
                                Padding="0"
                                Style="{DynamicResource CustomBorderStyle2}">
                                <WindowsFormsHost>
                                    <forms:PictureBox x:Name="MonitorVideoForm_02" />
                                </WindowsFormsHost>
                            </Border>
                        </Grid>

                        <Grid x:Name="Box3" Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="0"
                                Width="420"
                                Height="50"
                                Style="{DynamicResource CustomBorderStyle}">
                                <WrapPanel>
                                    <TextBlock
                                        x:Name="MonitorTitleText_03"
                                        MaxWidth="350"
                                        Margin="5,5,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource CameraTitleText}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        x:Name="MonitorTitleText_Icon_03"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Image
                                            Height="25"
                                            Margin="15,5,0,0"
                                            Source="/Monitor/Images/speaker.png" />
                                    </Border>
                                </WrapPanel>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Width="420"
                                Height="250"
                                Padding="0"
                                Style="{DynamicResource CustomBorderStyle2}">
                                <WindowsFormsHost>
                                    <forms:PictureBox x:Name="MonitorVideoForm_03" />
                                </WindowsFormsHost>
                            </Border>
                        </Grid>

                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450" />
                            <ColumnDefinition Width="22.5" />
                            <ColumnDefinition Width="450" />
                            <ColumnDefinition Width="22.5" />
                            <ColumnDefinition Width="450" />
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="Box4" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="420"
                                Height="50"
                                Style="{DynamicResource CustomBorderStyle}">
                                <WrapPanel>
                                    <TextBlock
                                        x:Name="MonitorTitleText_04"
                                        MaxWidth="350"
                                        Margin="5,5,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource CameraTitleText}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        x:Name="MonitorTitleText_Icon_04"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Image
                                            Height="25"
                                            Margin="15,5,0,0"
                                            Source="/Monitor/Images/speaker.png" />
                                    </Border>
                                </WrapPanel>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Width="420"
                                Height="250"
                                Padding="0"
                                Style="{DynamicResource CustomBorderStyle2}">
                                <WindowsFormsHost>
                                    <forms:PictureBox x:Name="MonitorVideoForm_04" />
                                </WindowsFormsHost>
                            </Border>
                        </Grid>

                        <Grid x:Name="Box5" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="420"
                                Height="50"
                                Style="{DynamicResource CustomBorderStyle}">
                                <WrapPanel>
                                    <TextBlock
                                        x:Name="MonitorTitleText_05"
                                        MaxWidth="350"
                                        Margin="5,5,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource CameraTitleText}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        x:Name="MonitorTitleText_Icon_05"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Image
                                            Height="25"
                                            Margin="15,5,0,0"
                                            Source="/Monitor/Images/speaker.png" />
                                    </Border>
                                </WrapPanel>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Width="420"
                                Height="250"
                                Padding="0"
                                Style="{DynamicResource CustomBorderStyle2}">
                                <WindowsFormsHost>
                                    <forms:PictureBox x:Name="MonitorVideoForm_05" />
                                </WindowsFormsHost>
                            </Border>
                        </Grid>

                        <Grid x:Name="Box6" Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="420"
                                Height="50"
                                Style="{DynamicResource CustomBorderStyle}">
                                <WrapPanel>
                                    <TextBlock
                                        x:Name="MonitorTitleText_06"
                                        MaxWidth="350"
                                        Margin="5,5,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource CameraTitleText}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        x:Name="MonitorTitleText_Icon_06"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Image
                                            Height="25"
                                            Margin="15,5,0,0"
                                            Source="/Monitor/Images/speaker.png" />
                                    </Border>
                                </WrapPanel>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Width="420"
                                Height="250"
                                Padding="0"
                                Style="{DynamicResource CustomBorderStyle2}">
                                <WindowsFormsHost>
                                    <forms:PictureBox x:Name="MonitorVideoForm_06" />
                                </WindowsFormsHost>
                            </Border>
                        </Grid>

                    </Grid>
                </Grid>

            </Border>

            <Grid Grid.Row="2">

                <WrapPanel Margin="25,0,0,0">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="共" />
                    <TextBlock
                        x:Name="TotalPageText"
                        Width="25"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="当前第" />
                    <TextBlock
                        x:Name="CurrentPageText"
                        Width="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">
                    <Button
                        Margin="15,0,10,0"
                        Click="PrePage"
                        Content="上页"
                        Style="{DynamicResource Page}" />
                    <Button
                        Margin="0,0,50,0"
                        Click="NextPage"
                        Content="下页"
                        Style="{DynamicResource Page}" />
                </WrapPanel>
            </Grid>

        </Grid>

    </Border>

</Window>

