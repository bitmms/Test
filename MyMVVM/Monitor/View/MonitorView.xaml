<UserControl
    x:Class="MyMVVM.Monitor.View.MonitorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinFormHost="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:local="clr-namespace:MyMVVM.Monitor.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renderOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Width="1480"
    Height="760"
    mc:Ignorable="d">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.00*" />
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="1.00*" />
            <ColumnDefinition Width="0.03*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="1.4*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ItemsControl ItemsSource="{Binding MonitorDataList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8" Rows="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Background="{Binding Background}"
                                Command="{Binding ButtonCommand}"
                                Style="{DynamicResource MainButton}">
                                <ContentControl>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="/Common/Fonts/#iconfont"
                                            FontSize="16"
                                            Text="&#xe6c4;"
                                            Visibility="{Binding IsNotShowTalk, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="/Common/Fonts/#iconfont"
                                            FontSize="16"
                                            Foreground="#16c415"
                                            Text="&#xe620;"
                                            Visibility="{Binding IsShowTalk, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            MaxWidth="100"
                                            MaxHeight="30"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Foreground="{Binding FontColor}"
                                            Text="{Binding Name}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </ContentControl>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.28*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Command="{Binding PreviousPageCommand}"
                    Content="上页"
                    Style="{DynamicResource Page}"
                    Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Grid.Column="2"
                    Command="{Binding NextPageCommand}"
                    Content="下页"
                    Style="{DynamicResource Page}"
                    Visibility="{Binding IsShowPageButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

            </Grid>

            <Grid Grid.Row="2">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding GroupDataList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding GroupButtonColor}"
                                    Command="{Binding GroupButtonCommand}"
                                    Style="{DynamicResource GroupButtonStyle}">
                                    <WrapPanel>
                                        <TextBlock Margin="0,0,6,0">
                                            <materialDesign:PackIcon Foreground="White" Kind="UserGroup" />
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding GroupName}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="1100*" />
                    <ColumnDefinition Width="105*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding LeftDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

                <Grid Grid.Column="1">

                    <ItemsControl ItemsSource="{Binding MonitorButtonList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding BackgroundColor}"
                                    Command="{Binding ButtonCommand}"
                                    Opacity="{Binding IsShow}"
                                    Style="{DynamicResource DispatchButton}">
                                    <WrapPanel>
                                        <TextBlock Padding="0,0,5,3">
                                            <materialDesign:PackIcon
                                                Margin="0,4,0,0"
                                                Foreground="White"
                                                Kind="{Binding Icon}" />
                                        </TextBlock>
                                        <TextBlock
                                            Padding="0,1,5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Name}" />
                                    </WrapPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                </Grid>

                <Grid Grid.Column="2">
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding DispatchNumCommand}"
                        Cursor="Hand"
                        DataContext="{Binding RightDispatchNumModel}"
                        Style="{DynamicResource LeftAndRightDispatchButtonStyle}" />
                </Grid>

            </Grid>

        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="4.8*" />
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="5.5*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="18*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{DynamicResource CustomBorderStyle}">
                    <WrapPanel>
                        <TextBlock>
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="95,2,5,0"
                                Kind="MonitorSpeaker"
                                Style="{DynamicResource DM-Right-List-Monitor-Icon}" />
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Black"
                            Style="{DynamicResource DM-Right-List-Monitor-Text}"
                            Text="监控视频" />
                        <Button
                            Height="25"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding OpenOneMonitorView}">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="20"
                                Kind="AlphabetTBoxOutline"
                                Style="{DynamicResource DM-Right-List-Camera-Icon}" />
                        </Button>

                    </WrapPanel>
                </Border>

                <Border
                    Grid.Row="1"
                    Padding="0"
                    Style="{DynamicResource CustomBorderStyle2}">
                    <WindowsFormsHost Style="{DynamicResource CustomBorderStyle3}">
                        <forms:PictureBox x:Name="MonitorVideoForm1212" />
                    </WindowsFormsHost>
                </Border>

            </Grid>

        </Grid>

    </Grid>

</UserControl>
