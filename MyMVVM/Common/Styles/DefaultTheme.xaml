<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <!--  主窗口的 border，目的是切换背景图片  -->
    <Style x:Key="MainBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/Images/login.png" Stretch="Fill" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  弹窗统一背景  -->
    <Style x:Key="SettingWindow" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/Images/login.png" Stretch="Fill" />
            </Setter.Value>
        </Setter>
    </Style>


    <!--  主窗口的最小化、最大化和关闭按钮  -->
    <Style x:Key="MinButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="25" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image Source="/Images/min.png" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MaxButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="25" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image Source="/Images/Max.png" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="QuitButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="25" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image Margin="2" Source="/Images/quit.png" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--  主窗口侧边栏  -->
    <Storyboard x:Key="MenuOpenStyle">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
            <EasingDoubleKeyFrame KeyTime="0" Value="60" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="220" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="MenuCloseStyle">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
            <EasingDoubleKeyFrame KeyTime="0" Value="220" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="60" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>



    <!--  音乐播放的控制按钮  -->
    <Style x:Key="MusicControlButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="Transparent" />
    </Style>



    <!--  左右调度的按钮：把调度名称、调度图片、调度号码整合到一起  -->
    <Style x:Key="LeftAndRightDispatchButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Foreground="{Binding FontColor}"
                            Text="{Binding Name}" />
                        <Border Grid.Row="1">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Image}" />
                            </Border.Background>
                        </Border>
                        <TextBlock
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            FontSize="18"
                            Foreground="{Binding FontColor}"
                            Text="{Binding Num}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--  调度、广播的功能按钮  -->
    <Style x:Key="DispatchButton" TargetType="Button">
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="100" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#B0E2FF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--  分组按钮  -->
    <Style x:Key="GroupButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="55" />
        <Setter Property="Width" Value="130" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#87CEFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">

                        <!--  设置圆角半径  -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--  主区域展示的所有用户的按钮  -->
    <Style x:Key="MainButton" TargetType="Button">
        <Setter Property="Height" Value="60" />
        <Setter Property="Margin" Value="3,3,3,3" />
        <Setter Property="BorderBrush" Value="#D3D3D3" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--  状态栏：用户状态各种状态的说明展示  -->
    <Style x:Key="CommanndEli" TargetType="Ellipse">
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
    </Style>
    <Style x:Key="CommandTex" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>



    <!--  LOGIN  -->
    <Style x:Key="MinimizeButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#28AEED" />
        <Setter Property="Content" Value="-" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#278BEF" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
        <Border
            Width="18"
            Height="18"
            Background="{TemplateBinding Background}"
            CornerRadius="9">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </ControlTemplate>
    <Style x:Key="CloseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#DA34AE" />
        <Setter Property="Content" Value="x" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#C62DAE" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="LoginButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#7EC0EE" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#28AEED" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <ControlTemplate x:Key="LoginButtonTemplate" TargetType="Button">
        <Border
            Width="100"
            Height="40"
            Background="{TemplateBinding Background}"
            CornerRadius="10">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </ControlTemplate>
    <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="150" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Gray"
                            BorderThickness="0,0,0,1">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <Border
                            Name="FocusedBorder"
                            Background="Transparent"
                            BorderBrush=" #87CEFA"
                            BorderThickness="0,0,0,1"
                            Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Transparent" />
                            <Setter TargetName="FocusedBorder" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PasswordText" TargetType="TextBox">
        <Setter Property="TextDecorations">
            <Setter.Value>
                <TextDecorationCollection>
                    <TextDecoration>
                        <TextDecoration.Pen>
                            <Pen
                                Brush="Black"
                                DashCap="Round"
                                EndLineCap="Round"
                                StartLineCap="Round"
                                Thickness="10">
                                <Pen.DashStyle>
                                    <DashStyle Dashes="0.0,1.2" Offset="0.6" />
                                </Pen.DashStyle>
                            </Pen>
                        </TextDecoration.Pen>
                        <TextDecoration.Location>
                            <TextDecorationLocation>Strikethrough</TextDecorationLocation>
                        </TextDecoration.Location>
                    </TextDecoration>
                </TextDecorationCollection>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Background" Value="#FF484D5E" />
        <Setter Property="Foreground" Value="Transparent" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="Courier New" />


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Gray"
                            BorderThickness="0,0,0,1">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <Border
                            Name="FocusedBorder"
                            Background="Transparent"
                            BorderBrush=" #87CEFA"
                            BorderThickness="0,0,0,1"
                            Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Transparent" />
                            <Setter TargetName="FocusedBorder" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--  通话记录列表、未接来电、广播列表按钮  -->
    <Style x:Key="ExpansionButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="23" />
        <Setter Property="Width" Value="90" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="#87CEFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="7">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  无人值守  -->
    <Style x:Key="People" TargetType="Button">
        <Setter Property="Height" Value="60" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Background" Value="#87CEFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="7">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--  设置表头文字居中  -->
    <Style x:Key="CenteredHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
    </Style>


</ResourceDictionary>
