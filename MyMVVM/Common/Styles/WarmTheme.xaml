        <Setter Property="Source" Value="/Common/Images/logo2.png" />
    </Style>
    <Style x:Key="DM-Logo-Img-2" TargetType="Image">
        <Setter Property="Source" Value="/Common/Images/warmlogo.png" />
    </Style>
    <Style x:Key="DM-Logo-Font" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#40e0d0" />
    </Style>

    <!--  标题  -->
    <Style x:Key="MainTitle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="10" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="25"
                    Direction="320"
                    Opacity="1"
                    ShadowDepth="15"
                    Color="Black" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DM-Title-Text" TargetType="Button">
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="#dddfe6" />
                    <GradientStop Offset="0.5" Color="#f4f4f4" />
                    <GradientStop Offset="1.0" Color="#eef7f2" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  关闭窗口、缩放窗口按钮  -->
    <Style x:Key="DM-Right-Close-Window" TargetType="materialDesign:PackIcon">
        <Setter Property="Foreground" Value="#f4f5f9" />
    </Style>

    <!--  功能按键按钮样式(通话记录列表、未接来电、广播列表)  -->
    <Style x:Key="DM-Function-Button" TargetType="Button">
        <Setter Property="Height" Value="23" />
        <Setter Property="Width" Value="90" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#F0FFFF" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="320"
                                Opacity="1"
                                ShadowDepth="5"
                                Color="Black" />
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="8"
                            Direction="320"
                            Opacity="0.6"
                            ShadowDepth="2"
                            Color="Black" />
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform Y="2" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
