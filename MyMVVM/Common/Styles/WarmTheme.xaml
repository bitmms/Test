        <Setter Property="Foreground" Value="#fdd692" />
    </Style>
    <Style x:Key="DM-Broadcast-Text" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color=" #fdd692" />
                    <GradientStop Offset="1.0" Color="#fbffb9" />
                </LinearGradientBrush>
            </Setter.Value>
