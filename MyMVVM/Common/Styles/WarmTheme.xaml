                    <GradientStop Offset="0.0" Color=" #88dba3" />
                    <GradientStop Offset="1.0" Color="#3ac569" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  通话记录  -->
