    <!--  程序窗口图标  -->
    <Style x:Key="WindowIoc" TargetType="Window">
        <Setter Property="Icon" Value="/Common/Images/warmlogo.ico" />
    </Style>



    <!--#region 主窗口背景图片-->


    <Style x:Key="DM-Main-Img" TargetType="Border">
        <Setter Property="BorderThickness" Value="6" />
        <Setter Property="BorderBrush" Value="#e390d5" />
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/Common/Images/login.png" Stretch="Fill" />
            </Setter.Value>
        </Setter>
    </Style>


