<Window x:Class="MyMVVM.Common.View.PingNetworkDeviceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMVVM.Common.View"
        mc:Ignorable="d"
        Title="PingNetworkDeviceView" 
        Width="500"
        SizeToContent="Height"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Common/Images/icon1.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        >


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Padding="20,0,20,0" Style="{DynamicResource BroadcastFromStyle}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Grid.Row="0"  FontSize="24" Text="主备机网络检测" />
            </Grid>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock  FontSize="20" Text="主机" />
                </Border>
                
                <Border Grid.Column="1">
                    <TextBox x:Name="HostIP1"
                             Text="" 
                             IsReadOnly="True"
                             FontSize="18"
                             Foreground="#000000"
                             Background="Transparent"
                             BorderBrush="#2196f3"
                             Margin="0 5 0 5"
                             />
                </Border>

                <Border Grid.Column="2">
                    <Image Grid.Column="2"
                           x:Name="HostIcon1"
                           Width="35"
                           Height="35"
                           Margin="0 0 10 0"
                           />
                </Border>

            </Grid>

            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock  FontSize="20" Text="备机" />
                </Border>

                <Border Grid.Column="1">
                    <TextBox x:Name="HostIP2"
                             Text="" 
                             IsReadOnly="True"
                             FontSize="18"
                             Foreground="#000000"
                             Background="Transparent"
                             BorderBrush="#2196f3"
                             Margin="0 5 0 5"
                             />
                </Border>

                <Border Grid.Column="2">
                    <Image Grid.Column="2"
                           x:Name="HostIcon2"
                           Width="35"
                           Height="35"
                           Margin="0 0 10 0"
                           />
                </Border>

            </Grid>

            <Grid Grid.Row="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="3"
                        Content="确定"
                        Click="Button_Click"
                        Style="{DynamicResource MaterialDesignRaisedLightButton}" />

            </Grid>

        </Grid>

    </Border>

</Window>
