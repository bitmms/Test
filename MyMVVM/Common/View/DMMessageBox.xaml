    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!--<Grid Grid.Row="0" Background="#3C6AB1">
                <TextBlock
                    x:Name="lblTitle"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="White" />
            </Grid>-->

        <Border Grid.Row="0" Style="{DynamicResource DMMBorder1}">
            <TextBlock
                x:Name="lblTitle"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Black"
                Style="{DynamicResource DMMBorder1_TextBlock_Title}" />
        </Border>

        <Border Grid.Row="1" Style="{DynamicResource DMMBorder}">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        x:Name="infoIcon"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontFamily="/Common/Fonts/#iconfont"
                        FontSize="18"
                        Text="&#xe600;" />
                    <TextBlock
                        x:Name="lblMsg"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Black"
                        Foreground="#000000"
                        Text="1111"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel
                    x:Name="ConfirmPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{Binding ShowConfirmAndCancel, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button
                        Click="ConfirmButtonClick"
                        Content="确定"
                        Style="{DynamicResource ConfirmButton}" />
                </StackPanel>

                <StackPanel
                    x:Name="YesAndNoPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{Binding ShowYesAndNo, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button
                        Background="#aaadb4"
                        Click="NoButtonClick"
                        Content="否"
                        Style="{DynamicResource ConfirmButton}" />
                    <Button
                        Click="YesButtonClick"
                        Content="是"
                        Style="{DynamicResource ConfirmButton}" />
                </StackPanel>

                <StackPanel
                    x:Name="LeftAndRight"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{Binding ShowLeftAndRight, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button
                        Click="LeftClick"
                        Content="左调度"
                        Style="{DynamicResource ConfirmButton}" />
                    <Button
                        Click="RightClick"
                        Content="右调度"
                        Style="{DynamicResource ConfirmButton}" />
                </StackPanel>

            </Grid>

        </Border>

    </Grid>

</Window>
