<Window x:Class="MyMVVM.Emotion.View.EmotionALarmView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMVVM.Broadcast.View"
        mc:Ignorable="d"
        Title="EmotionALarmView" 
        Width="1200"
        Height="660"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Common/Images/icon1.ico"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:hc="https://handyorg.github.io/handycontrol"
       >


    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>


    <Border Style="{DynamicResource UserCdrMain}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Style="{DynamicResource UserCdrMainHeader}">
                <Grid Grid.Row="0">
                    <TextBlock
                        Margin="20,18,0,0"
                        FontFamily="楷体"
                        FontSize="24"
                        Style="{DynamicResource ButtonBlockStyle}"
                        Text="通话情绪智能分析" />
                    <Button
                        x:Name="btnClose"
                        Grid.Column="2"
                        Height="50"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnClose_Click">
                        <materialDesign:PackIcon
                            Width="45"
                            Height="45"
                            Foreground="Black"
                            Kind="CloseCircleOutline" />
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <hc:RunningBlock 
                    Width="1000"
                            Grid.Column="0" 
                            Content="{Binding KeyWordData}"
                            Duration="0:0:10" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" 
                            FontSize="18"
                            Foreground="#000000"
                            Background="Transparent"
                            BorderBrush="#2196f3"
                    BorderThickness="0"
                            >
                </hc:RunningBlock>

                <Button
                    Grid.Column="1"
                    Width="120"
                    Margin="0,0,20,0"
                    Command="{Binding UpdateEmotionKeyWord}"
                    Content="修改关键词"
                    Style="{DynamicResource EditorButton}" />
            </Grid>
            
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <DataGrid
                    x:Name="DataGridElement"
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    CanUserResizeColumns="False"
                    ColumnHeaderStyle="{DynamicResource CenteredHeaderStyle}"
                    FontSize="15"
                    GridLinesVisibility="None"
                    IsReadOnly="True"
                    ItemsSource="{Binding EmotionList}"
                    SelectedItem="{Binding SelectedItem}">
                    <DataGrid.Columns>

                        <!--  主叫  -->
                        <DataGridTemplateColumn Width="*" Header="主叫">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding FromNumber}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  被叫  -->
                        <DataGridTemplateColumn Width="*" Header="被叫">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding ToNumber}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  通话时间  -->
                        <DataGridTemplateColumn Width="2*" Header="通话时间">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding CallTime}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!--  识别到的关键词  -->
                        <DataGridTemplateColumn Width="2*" Header="识别到的关键词">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding CallText}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  操作按钮  -->
                        <DataGridTemplateColumn Width="2*" Header="操作">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button
                                            Grid.Column="0"
                                            Command="{Binding CancelCommand}"
                                            Content="处理"
                                            Style="{DynamicResource EditorButton}" />

                                        <Button
                                            Grid.Column="1"
                                            Command="{Binding ShowMoreInfo}"
                                            Content="查看详情"
                                            Style="{DynamicResource EditorButton}" />
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Row="3">
                <WrapPanel Margin="25,0,0,0">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="共" />
                    <TextBlock
                        Width="25"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding TotalPages}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="当前第" />
                    <TextBlock
                        Width="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding CurrentPage}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">

                    <Button
                        Command="{Binding GoToFirstPageCommand}"
                        Content="回到首页"
                        Style="{DynamicResource Page}" />

                    <Button
                        Margin="15,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        Content="上页"
                        Style="{DynamicResource Page}" />

                    <Button
                        Margin="0,0,50,0"
                        Command="{Binding NextPageCommand}"
                        Content="下页"
                        Style="{DynamicResource Page}" />

                </WrapPanel>
            </Grid>

        </Grid>

    </Border>

</Window>
