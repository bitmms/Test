<Window
    x:Class="MyMVVM.Gateway.View.GatewayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:MyMVVM.Gateway.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EmotionALarmView"
    Width="1200"
    Height="620"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Common/Images/icon1.ico"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>


    <Border Style="{DynamicResource UserCdrMain}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Style="{DynamicResource UserCdrMainHeader}">
                <Grid Grid.Row="0">
                    <TextBlock
                        Margin="20,18,0,0"
                        FontFamily="楷体"
                        FontSize="24"
                        Style="{DynamicResource ButtonBlockStyle}"
                        Text="网关报警列表" />
                    <Button
                        x:Name="btnClose"
                        Grid.Column="2"
                        Height="50"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnClose_Click">
                        <materialDesign:PackIcon
                            Width="45"
                            Height="45"
                            Foreground="Black"
                            Kind="CloseCircleOutline" />
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <DataGrid
                    x:Name="DataGridElement"
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    CanUserResizeColumns="False"
                    ColumnHeaderStyle="{DynamicResource CenteredHeaderStyle}"
                    FontSize="18"
                    GridLinesVisibility="None"
                    IsReadOnly="True"
                    ItemsSource="{Binding PageList}"
                    RowHeight="42">


                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent" />
                        </Style>

                    </DataGrid.RowStyle>


                    <DataGrid.Columns>

                        <!--  号码  -->
                        <DataGridTemplateColumn Width="*" Header="号码">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding telno}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  状态  -->
                        <DataGridTemplateColumn Width="*" Header="状态">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding desc}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  原因  -->
                        <DataGridTemplateColumn Width="2*" Header="原因">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding lineState}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  长度  -->
                        <DataGridTemplateColumn Width="*" Header="长度">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{DynamicResource UserCdrText}"
                                        Text="{Binding lineLength}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Row="2">
                <WrapPanel Margin="25,0,0,0">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="共" />
                    <TextBlock
                        Width="25"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding TotalPages}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                    <TextBlock
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="当前第" />
                    <TextBlock
                        Width="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="{Binding CurrentPage}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        FontWeight="Black"
                        Text="页" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">

                    <Button
                        Command="{Binding GoToFirstPageCommand}"
                        Content="回到首页"
                        Style="{DynamicResource Page}" />

                    <Button
                        Margin="15,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        Content="上页"
                        Style="{DynamicResource Page}" />

                    <Button
                        Margin="0,0,50,0"
                        Command="{Binding NextPageCommand}"
                        Content="下页"
                        Style="{DynamicResource Page}" />

                </WrapPanel>
            </Grid>

        </Grid>

    </Border>

</Window>