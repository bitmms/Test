<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:eui="clr-namespace:ElementUI.WPF.Component">

    <!--  控件  -->
    <Style TargetType="eui:Button">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="eui:Button">
                    <Grid x:Name="ButtonGridBox">
                        <Border
                            x:Name="ButtonBorderBox"
                            Background="{Binding ButtonBackgroundColor, RelativeSource={RelativeSource TemplatedParent}}"
                            BorderBrush="{Binding ButtonBorderColor, RelativeSource={RelativeSource TemplatedParent}}"
                            BorderThickness="{Binding ButtonBorderSize, RelativeSource={RelativeSource TemplatedParent}}"
                            CornerRadius="{Binding ButtonBorderRadius, RelativeSource={RelativeSource TemplatedParent}}">
                            <Grid>

                                <!--  文本按钮  -->
                                <Grid x:Name="TextButton" Visibility="Collapsed">
                                    <TextBlock
                                        x:Name="TextButton_TextBlock"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="{Binding ButtonTextSize, RelativeSource={RelativeSource TemplatedParent}}"
                                        FontWeight="{Binding ButtonTextWeight, RelativeSource={RelativeSource TemplatedParent}}"
                                        Foreground="{Binding ButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}"
                                        Text="{Binding ButtonText, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Grid>

                                <!--  图标按钮  -->
                                <Grid x:Name="IconButton" Visibility="Collapsed">
                                    <eui:Icon
                                        x:Name="IconButton_Icon"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IconCode="{Binding ButtonIconCode, RelativeSource={RelativeSource TemplatedParent}}"
                                        IconColor="{Binding IconColor, RelativeSource={RelativeSource TemplatedParent}}"
                                        IconSize="{Binding ButtonIconSize, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Grid>

                                <!--  图标文本按钮  -->
                                <Grid
                                    x:Name="LeftIconAndTextButton"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="{Binding ButtonIconAndTextSpace, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Column="0">
                                        <eui:Icon
                                            x:Name="LeftIconAndTextButton_Icon"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            IconCode="{Binding ButtonIconCode, RelativeSource={RelativeSource TemplatedParent}}"
                                            IconColor="{Binding IconColor, RelativeSource={RelativeSource TemplatedParent}}"
                                            IconSize="{Binding ButtonIconSize, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </Grid>
                                    <Grid Column="2">
                                        <TextBlock
                                            x:Name="LeftIconAndTextButton_TextBlock"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="{Binding ButtonTextSize, RelativeSource={RelativeSource TemplatedParent}}"
                                            FontWeight="{Binding ButtonTextWeight, RelativeSource={RelativeSource TemplatedParent}}"
                                            Foreground="{Binding ButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}"
                                            Text="{Binding ButtonText, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </Grid>
                                </Grid>

                                <!--  文本图标按钮  -->
                                <Grid
                                    x:Name="RightIconAndTextButton"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="{Binding ButtonIconAndTextSpace, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Column="0">
                                        <TextBlock
                                            x:Name="RightIconAndTextButton_TextBlock"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontSize="{Binding ButtonTextSize, RelativeSource={RelativeSource TemplatedParent}}"
                                            FontWeight="{Binding ButtonTextWeight, RelativeSource={RelativeSource TemplatedParent}}"
                                            Foreground="{Binding ButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}"
                                            Text="{Binding ButtonText, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </Grid>
                                    <Grid Column="2">
                                        <eui:Icon
                                            x:Name="RightIconAndTextButton_Icon"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            IconCode="{Binding ButtonIconCode, RelativeSource={RelativeSource TemplatedParent}}"
                                            IconColor="{Binding IconColor, RelativeSource={RelativeSource TemplatedParent}}"
                                            IconSize="{Binding ButtonIconSize, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </Grid>
                                </Grid>

                                <!--  自定义按钮  -->
                                <Grid x:Name="CustomButton" Visibility="Collapsed">
                                    <Border>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </Grid>

                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--  按钮类型触发器  -->
                        <Trigger Property="ButtonType" Value="Text">
                            <Setter TargetName="TextButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="ButtonType" Value="Icon">
                            <Setter TargetName="IconButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="ButtonType" Value="LeftIconAndText">
                            <Setter TargetName="LeftIconAndTextButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="ButtonType" Value="RightIconAndText">
                            <Setter TargetName="RightIconAndTextButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="ButtonType" Value="Custom">
                            <Setter TargetName="CustomButton" Property="Visibility" Value="Visible" />
                        </Trigger>


                        <!--  是否自动适应长宽  -->
                        <Trigger Property="ButtonIsAutoSize" Value="True">
                            <Setter TargetName="ButtonGridBox" Property="Width" Value="Auto" />
                            <Setter TargetName="ButtonGridBox" Property="Height" Value="Auto" />
                        </Trigger>
                        <Trigger Property="ButtonIsAutoSize" Value="False">
                            <Setter TargetName="ButtonGridBox" Property="Width" Value="{Binding ButtonWidth, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="ButtonGridBox" Property="Height" Value="{Binding ButtonHeight, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <!--  鼠标触发器  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <!--  外盒子  -->
                            <Setter TargetName="ButtonBorderBox" Property="Background" Value="{Binding MouseEnterButtonBackgroundColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="ButtonBorderBox" Property="BorderBrush" Value="{Binding MouseEnterButtonBorderColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本按钮  -->
                            <Setter TargetName="TextButton_TextBlock" Property="Foreground" Value="{Binding MouseEnterButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  图标按钮  -->
                            <Setter TargetName="IconButton_Icon" Property="IconColor" Value="{Binding MouseEnterIconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  图标文本按钮  -->
                            <Setter TargetName="LeftIconAndTextButton_Icon" Property="IconColor" Value="{Binding MouseEnterIconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="LeftIconAndTextButton_TextBlock" Property="Foreground" Value="{Binding MouseEnterButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本图标按钮  -->
                            <Setter TargetName="RightIconAndTextButton_Icon" Property="IconColor" Value="{Binding MouseEnterIconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="RightIconAndTextButton_TextBlock" Property="Foreground" Value="{Binding MouseEnterButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <!--  外盒子  -->
                            <Setter TargetName="ButtonBorderBox" Property="Background" Value="{Binding ButtonBackgroundColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="ButtonBorderBox" Property="BorderBrush" Value="{Binding ButtonBorderColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本按钮  -->
                            <Setter TargetName="TextButton_TextBlock" Property="Foreground" Value="{Binding ButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  图标按钮  -->
                            <Setter TargetName="IconButton_Icon" Property="IconColor" Value="{Binding IconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本图标按钮  -->
                            <Setter TargetName="LeftIconAndTextButton_Icon" Property="IconColor" Value="{Binding IconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="LeftIconAndTextButton_TextBlock" Property="Foreground" Value="{Binding ButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本图标按钮  -->
                            <Setter TargetName="RightIconAndTextButton_Icon" Property="IconColor" Value="{Binding IconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="RightIconAndTextButton_TextBlock" Property="Foreground" Value="{Binding ButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <!--  外盒子  -->
                            <Setter TargetName="ButtonBorderBox" Property="Background" Value="{Binding MouseClickButtonBackgroundColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="ButtonBorderBox" Property="BorderBrush" Value="{Binding MouseClickButtonBorderColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本按钮  -->
                            <Setter TargetName="TextButton_TextBlock" Property="Foreground" Value="{Binding MouseClickButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  图标按钮  -->
                            <Setter TargetName="IconButton_Icon" Property="IconColor" Value="{Binding MouseClickIconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  图标文本按钮  -->
                            <Setter TargetName="LeftIconAndTextButton_Icon" Property="IconColor" Value="{Binding MouseClickIconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="LeftIconAndTextButton_TextBlock" Property="Foreground" Value="{Binding MouseClickButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <!--  文本图标按钮  -->
                            <Setter TargetName="RightIconAndTextButton_Icon" Property="IconColor" Value="{Binding MouseClickIconColor, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="RightIconAndTextButton_TextBlock" Property="Foreground" Value="{Binding MouseClickButtonTextColor, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <!--  禁用状态触发器  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="ButtonTextColor" Value="{Binding NoButtonTextColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="MouseEnterButtonTextColor" Value="{Binding NoMouseEnterButtonTextColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="IconColor" Value="{Binding NoButtonIconColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="MouseEnterIconColor" Value="{Binding NoMouseEnterIconColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="ButtonBorderColor" Value="{Binding NoButtonBorderColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="MouseEnterButtonBorderColor" Value="{Binding NoMouseEnterButtonBorderColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="ButtonBackgroundColor" Value="{Binding NoButtonBackgroundColor, RelativeSource={RelativeSource Self}}" />
                            <Setter Property="MouseEnterButtonBackgroundColor" Value="{Binding NoMouseEnterButtonBackgroundColor, RelativeSource={RelativeSource Self}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


